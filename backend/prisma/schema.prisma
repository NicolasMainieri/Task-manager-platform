// Fatture emesse
model Fattura {
  id          String   @id @default(uuid())

  // Numerazione fattura
  numero      String   @unique // es: "2025/001"
  anno        Int      // Anno fiscale
  progressivo Int      // Numero progressivo nell'anno

  // Cliente
  clienteNome     String
  clienteEmail    String?
  clienteTelefono String?
  clientePIva     String?
  clienteCF       String?
  clienteIndirizzo String?
  clienteCitta    String?
  clienteCAP      String?
  clientePaese    String?  @default("Italia")

  // Collegamento contatto (opzionale)
  contactId   String?

  // Collegamento preventivo (se la fattura deriva da un preventivo)
  preventivoId String?

  // Collegamento progetto (se fattura per progetto)
  progettoId  String?

  // Righe fattura (array JSON)
  righe       String   @default("[]") // [{ descrizione, quantita, prezzoUnitario, iva, totale }]

  // Totali
  imponibile  Float    // Totale imponibile (senza IVA)
  iva         Float    // Totale IVA
  totale      Float    // Totale fattura (imponibile + IVA)

  // Sconto (opzionale)
  sconto      Float    @default(0) // % di sconto
  scontoImporto Float  @default(0) // Importo sconto in euro

  // Date
  dataEmissione DateTime @default(now())
  dataScadenza  DateTime // Data scadenza pagamento

  // Stato pagamento
  statoPagamento String  @default("non_pagata") // 'non_pagata', 'parzialmente_pagata', 'pagata', 'scaduta'
  importoPagato  Float   @default(0)
  importoDaPagare Float  // Importo ancora da pagare

  // Metodo pagamento
  metodoPagamento String? // 'bonifico', 'contanti', 'carta', 'assegno', 'paypal', 'stripe'

  // Note
  note        String?
  noteInterne String? // Note visibili solo internamente

  // File generati
  urlPdf      String? // URL del PDF generato

  // Chi ha creato la fattura
  createdById String

  // Azienda (isolamento dati)
  companyId   String

  // Pagamenti collegati
  pagamenti   Pagamento[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@index([createdById])
  @@index([contactId])
  @@index([preventivoId])
  @@index([progettoId])
  @@index([statoPagamento])
  @@index([dataEmissione])
  @@index([dataScadenza])
  @@index([anno, progressivo])
}

// Pagamenti ricevuti
model Pagamento {
  id          String   @id @default(uuid())

  // Fattura collegata
  fatturaId   String
  fattura     Fattura  @relation(fields: [fatturaId], references: [id])

  // Importo pagamento
  importo     Float

  // Data pagamento
  dataPagamento DateTime @default(now())

  // Metodo pagamento
  metodoPagamento String // 'bonifico', 'contanti', 'carta', 'assegno', 'paypal', 'stripe'

  // Riferimento pagamento (es: numero bonifico, ID transazione)
  riferimento String?

  // Note
  note        String?

  // Ricevuta/prova pagamento
  urlRicevuta String?

  // Chi ha registrato il pagamento
  createdById String

  // Azienda
  companyId   String

  createdAt   DateTime @default(now())

  @@index([fatturaId])
  @@index([companyId])
  @@index([createdById])
  @@index([dataPagamento])
  @@index([metodoPagamento])
}

