# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# OAuth2 - Google (Calendar & Gmail)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:4000/api/integrations/google/callback"

# OAuth2 - Microsoft (Outlook Calendar & Email)
# Get these from: https://portal.azure.com/
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_REDIRECT_URI="http://localhost:4000/api/integrations/microsoft/callback"

# App Settings
PORT=4000
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Email Encryption Key (for IMAP/POP3 passwords)
EMAIL_ENCRYPTION_KEY="your-32-character-encryption-key-here-change-this"

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"  # or gpt-4, gpt-4-turbo, etc.
